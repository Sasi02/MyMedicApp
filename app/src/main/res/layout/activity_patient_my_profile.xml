<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.mymedic.PatientMyProfile"
    android:orientation="vertical"
    android:weightSum="10"
    android:fillViewport="true"
    android:background="@drawable/background_image_1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <fragment
            android:id="@+id/patient_top_bar"
            android:name="com.example.user.mymedic.PatientTopBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/activity_patient_top_bar" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/my_profile"
                android:textStyle="bold"
                android:textColor="@color/primaryTextColor"
                android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/initials"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profileInitials"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/initials" />

                <ImageView
                    android:id="@+id/profileInitialsEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/first_name"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profileFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/first_name" />

                <ImageView
                    android:id="@+id/profileFirstNameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/last_Name"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profileLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/last_Name" />

                <ImageView
                    android:id="@+id/profileLastNameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/email"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profileEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/email" />

                <ImageView
                    android:id="@+id/profileEmailEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/dateOfBirth"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profileDOB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/dateOfBirth" />

                <ImageView
                    android:id="@+id/profileDOBEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="30"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="0dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="7"
                    android:text="@string/telephone"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/profilePhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="24"
                    android:focusable="false"
                    android:hint="@string/telephone" />

                <ImageView
                    android:id="@+id/profilePhoneEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:focusable="false"
                    android:padding="0dp"
                    android:src="@android:drawable/ic_menu_edit"
                    tools:ignore="contentDescription" />
            </LinearLayout>
            <Button
                android:id="@+id/profileOkButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:background="@color/colorAccent"
                android:text="@string/ok" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>